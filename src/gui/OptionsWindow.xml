			<VBox fx:id="fontVB" prefWidth="250.0" />
			<VBox fx:id="xVB" prefWidth="100" />
			<VBox fx:id="fontsVB">
				<Label text="Font ignorieren" />
			</VBox>
			<VBox fx:id="ignoredVB">
				<Label text="Y wieder akzeptieren" />
			</VBox>
			<VBox fx:id="ignoredFontVB">
